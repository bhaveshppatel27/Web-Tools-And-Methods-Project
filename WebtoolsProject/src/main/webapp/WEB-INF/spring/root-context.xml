	<!-- Root Context: defines shared resources visible to all other web components -->
	<bean id="customerValidator" class="com.cinema.controller.CustomerValidator"></bean>
	<bean id="movieValidator" class="com.cinema.controller.MovieValidator"></bean>
	<bean id="theatreValidator" class="com.cinema.controller.TheatreValidator"></bean>
